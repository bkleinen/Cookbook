= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :login
    = f.text_field :login
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :persistence_token
    = f.text_field :persistence_token
  .field
    = f.label :crypted_password
    = f.text_field :crypted_password
  .field
    = f.label :password_salt
    = f.text_field :password_salt
  .field
    = f.label :single_access_token
    = f.text_field :single_access_token
  .field
    = f.label :perishable_token
    = f.text_field :perishable_token
  .field
    = f.label :login_count
    = f.text_field :login_count
  .field
    = f.label :failed_login_count
    = f.text_field :failed_login_count
  .field
    = f.label :last_request_at
    = f.datetime_select :last_request_at
  .field
    = f.label :current_login_at
    = f.datetime_select :current_login_at
  .field
    = f.label :last_login_at
    = f.datetime_select :last_login_at
  .field
    = f.label :current_login_ip
    = f.text_field :current_login_ip
  .field
    = f.label :last_login_ip
    = f.text_field :last_login_ip
  .actions
    = f.submit 'Save'
