= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :first
    = f.text_field :first
  .field
    = f.label :last
    = f.text_field :last
  .field
    = f.label :nick
    = f.text_field :nick
  .field
    = f.label :login
    = f.text_field :login
  .field
    = f.label :email
    = f.text_field :email

  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  .actions
    = f.submit 'Save'
