= form_for @ingredient do |f|
  -if @ingredient.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ingredient.errors.count, "error")} prohibited this ingredient from being saved:"
      %ul
        - @ingredient.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :step
    = f.text_field :step
  .field
    = f.label :recipe_id
    = f.text_field :recipe_id
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :unit_name
    = f.text_field :unit_name, :autocomplete => ingredients_autocomplete_unit_name_path
  .field
    = f.label :food_name
    = f.text_field :food_name, :autocomplete => ingredients_autocomplete_food_name_path
  .field
    = f.label :comment
    = f.text_area :comment
  .actions
    = f.submit 'Save'
